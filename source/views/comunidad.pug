html 
    include includes/head.pug
    body
        div(class="container-fluid")
            div(class="row")
                div(id="sidebar")
                    div(class="sidebar-header row")
                        div(class="col-3")
                            img(src="../images/lucaLogo.png")
                    div(class="sidebar-body row")
                        div(class="col-6")
                            button(class=" btn btn-outline-secondary home") Inicio
                            button(class=" btn btn-outline-secondary cursos") Mis cursos
                            button(class=" btn btn-outline-secondary quizzes") Quizzes
                            button(class=" btn btn-outline-secondary estudios") Plan de estudios
                            button(class=" btn btn-outline-secondary comunidad") Comunidad
                            button(class=" btn btn-outline-secondary ayuda") Centro de ayuda

        div(class="container-fluid header")
            div(class="row")
                div(class="col-4")
                    button(type="button" class="btn btn-outline-secondary explorar")  Explorar 
                        i(class="fas fa-chevron-down")
                    i(class="fas fa-search lents")
                div(class="col")
                    i(class="fas fa-fire popular") 0
                    i(class="fas fa-shield-alt recent") 0
                    i(class="fas fa-fan nice") 0
                div(class="col-2")
                    i(class="far fa-bell bell")
                    i(class="fas fa-user-circle user")
        div(class="container-fluid" id="body-question")
            div(class="row")
                div(class="col-7 comunidad-luca")
                    p Comunidad Luca 
                div(class="col-4")
                    a(href="/comunidad/nuevaPregunta" class="btn btn-outline-secondary pregunta") NUEVA PREGUNTA
            div(class="row" id="task")
                div(class="col-2")
                    p(class="popular") POPULARES
                div(class="col-2")
                    p NUEVOS 
                div(class="col-2")
                    p SEGUIDOS
            div(class="row")
                div(class="progress" style="height: 1px;")
                    div(class="progress-bar barra" role="progressbar" style="width: 13%;" aria-valuenow="13" aria-valuemin="0" aria-valuemax="100")

            div(class="row")
                each entry in entries
                    div(class="card tarjetas" style="width: 45rem;")
                        div(class="card-body container")
                            div(class="row")
                                div(class="col-2")
                                    i(class="fas fa-user-circle users")
                                div(class="col-10")
                                        h3= entry.titulo
                                        p= entry.cuerpo
                                        img(src="../images/like.png")
                                        img(src="../images/dislike.png" class="dislike")
                                        img(src="../images/share.png" class="share")
                                        img(src="../images/star.png" class="share")